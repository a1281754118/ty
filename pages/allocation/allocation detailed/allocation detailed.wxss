.free-dialog__mask {
 position: fixed;
 top: 0;
 left: 0;
 right: 0;
 bottom: 0;
 z-index: 9999998;
 background: rgba(0, 0, 0, 0.7);
 display: none;
}
.free-dialog__container {
 position: fixed;
 left: 0;
 bottom: 0;
 height: 500rpx;
 
 width: 100%;
 background: white;
 transform: translateY(150%);
 transition: all 0.4s ease;
 z-index: 9999999;
}
.free-gunlun{
  height: 500rpx;
 
 width: 100%;
text-align: center;
 overflow-y: scroll;
}
.free-dialog--show .free-dialog__container {
 transform: translateY(0);
}
.free-dialog--show .free-dialog__mask {
 display: block;
}
/*模态框中的内容*/
.free-button{
 display: inline-block;
 width:50%;
 height: 80rpx;
 line-height: 80rpx;
 text-align: center;
 font-size:30rpx;
 color:#030202;
 background: #F2F6FF
}
.free-dialog-submit{
 float: right;
 
}
radio-group{
 margin-bottom:20rpx;
}
radio-group>label{
 /* width:22.5%; */
  width:100%;
  font-size: 28rpx;
 height: 50rpx;
 line-height: 50rpx;
 display: inline-block;
 border-bottom:1rpx solid #ddd;
 padding:10px 0px;
 margin:0px 2px 2px;
}
 
radio-group label radio{
 width:100%;
 z-index: 3;
 display: none;
}
.checked{
 background:#c5c5c5;
 color:#fff;
}
radio-group label .free-text{
 width:100%;
 text-align: center;
 display: inline-block;
}
.free-text text{
  display: inline-block;
 width:50%;
 height: 50rpx;
 text-align: center;
 font-size:26rpx;
 color:#000;
}