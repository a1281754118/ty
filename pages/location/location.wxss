.location-view{
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  /* padding-right: 20rpx; */
  overflow: hidden;
  line-height: 90rpx;
  border-bottom: 1rpx rgb(230, 230, 230) solid;
}
.location-view text{
  color: rgb(158, 158, 158);
  float: right;
  margin-right: 60rpx;
}
.location-bottom{
  width: 90%;
  margin: 0 auto;
  background: #2FC1FD;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx;
  
}
.location-view2{
  position: absolute;
  width: 100%;
  bottom: 40rpx;
}