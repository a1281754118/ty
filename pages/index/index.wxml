<!--index.wxml-->
<view style='background: #E4E7EC; width:100%;min-height: 100%;position: absolute;z-index: -2;'>
  <view class='details'>
    <image src='../img/bg1.png'></image>
    <view class='details-1'>项目库存明细</view>
    <view class='details-2'>
      <view class='details-2-1'>
        <view class='details-2-1-1'>{{arr.tCount=='' ? arr.tCount : '00'}}</view>
        <view class='details-2-1-2'> 塔吊（台）</view>
      </view>
      <view class='details-2-1'>
        <view class='details-2-1-1'>{{arr.sCount=='' ? arr.sCount : '00'}}</view>
        <view class='details-2-1-2'> 升降机（台）</view>
      </view>
      <view class='details-2-1' style='border-style: none none none none;'>
        <view class='details-2-1-1' wx:if="{{arr.mCount!=''}}">{{arr.mCount}}</view>
        <view class='details-2-1-1' wx:if="{{arr==''}}">00</view>
        <view class='details-2-1-2'> 周材（吨）</view>
      </view>
    </view>
        
    <view class="details-3">
    <view bindtap="location">项目定位</view>
        <!-- <view bindtap="monomer">项目进度管理</view> -->
    </view>

  </view>


  <view class='wx-botton'>
    <view class='wx-botton-1' bindtap='lease'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/swzlht.png'></image>
      </view>
      <view class='wx-botton-1-2'>商务租赁合同</view>
      <!-- <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view> -->
    </view>
    <view class='wx-botton-1' bindtap="monomer">
      <view class='wx-botton-1-1' >
        <image src='/pages/img/jindusvg.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目进度管理</view>
    </view>
    <view class='wx-botton-1' bindtap='supply'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/ziyuan.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目供需管理</view>
      <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view>
    </view>
    <view class='wx-botton-1' bindtap='entry'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/xmjcgl.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目进场管理</view>
      <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view>
    </view>
    <view class='wx-botton-1' bindtap='exit'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/xmtcgl.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目退场管理</view>
      <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view>
    </view>
    <view class='wx-botton-1' bindtap='allocation'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/xmdbgl.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目调拨管理</view>
      <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view>
    </view>
    <view class='wx-botton-1' bindtap='lose'>
      <view class='wx-botton-1-1'>
        <image src='/pages/img/xmdsgl.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目丢失管理</view>
      <view class='wx-botton-1-3 '>
        <image src='/pages/img/jiantou.png'></image>
      </view>
    </view>
    
    <view class='wx-botton-1' >
      <view class='wx-botton-1-1'>
        <image src='/pages/img/chaxun.png'></image>
      </view>
      <view class='wx-botton-1-2'>项目库存查询</view>
    </view>
    <view class='wx-botton-1' >
      <view class='wx-botton-1-1'>
        <image src='/pages/img/jiesuanshenpi.png '></image>
      </view>
      <view class='wx-botton-1-2'>项目结算明细</view>
    </view>
    
    


  </view>
</view>