.details {
  width: 95%;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 5%;
  border-radius: 20rpx;
}

.details image {
  width: 100%;
  height: 400rpx;
  position: absolute;
  background-size: 100% 100%;
  left: 0rpx;
  z-index: -1;
}

.details-1 {
  color: #fff;
  font-size: 35rpx;
  padding-top: 60rpx;
}

.details-2 {
  width: 99%;
  margin: 0 auto;
  overflow: hidden;
}

.details-2-1 {
  width: 33%;
  height: 120rpx;
  color: #fff;
  float: left;
  margin-top: 80rpx;
  border-right: 1px solid rgba(238, 231, 231, 0.2);
}

.details-2-1-1 {
  font-size: 39rpx;
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
}

.details-2-1-2 {
  width: 80%;
  margin: 0 auto;
  font-size: 28rpx;
}
.details-3{
  overflow: hidden;
  /* width: 95%;
  margin: 0 auto; */
  font-size: 30rpx;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgb(109, 151, 241);
  border-radius: 0 0 20rpx 20rpx
}
.details-3 view{
  
  width: 50%;
  float: left;
  color: #fff;
}
.wx-botton {
  width: 95%;
  margin: 0 auto;
}

.wx-botton-1 {
  height: 90rpx;
  background: #fff;
  margin-bottom: 25rpx;
  border-radius: 10rpx;
}

.wx-botton-1-1 {
  width: 15%;
  height: 100%;
  float: left;
  line-height: 90rpx;
}

.wx-botton-1-1 image {
  width: 50rpx;
  height: 50rpx;
  line-height: 90rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.wx-botton-1-2 {
  width: 75%;
  height: 100%;
  float: left;
  line-height: 90rpx;
  font-size: 30rpx;
}

.wx-botton-1-3 {
  width: 10%;
  height: 100%;
  float: left;
}

.wx-botton-1-3 image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 30rpx;
}
